<Window x:Class="BoardApp.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoardApp.Views"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainView" Height="760" Width="450"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Secondary.Dark}"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">


    <md:Card 
             UniformCornerRadius="15"
             Background="{DynamicResource MaterialDesign.Brush.Primary.Light}"
             Margin="25"
             MouseDown="Card_MouseDown">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        </Grid>

        <!--<StackPanel>
            <Button Name="Close"
                    Command="{Binding CloseAppCommand}"
                    HorizontalAlignment="Right"
                    Margin="0 20 20 0"
                    Style="{DynamicResource MaterialDesignFlatButton}"       
                    Height="40">

                <md:PackIcon Kind="Close"/>

            </Button>
        </StackPanel>-->

        <ContentControl Grid.Row="1" Content="{Binding CurrentView, UpdateSourceTrigger=PropertyChanged}"/>
    </md:Card>
</Window>
